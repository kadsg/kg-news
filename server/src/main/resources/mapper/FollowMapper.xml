<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kg.news.mapper.FollowMapper">

    <resultMap id="followMapper" type="kg.news.vo.FansVO">
        <result column="user_id" property="id"/>
        <result column="delete_flag" property="deleteFlag"/>
    </resultMap>


    <select id="queryFansList" parameterType="kg.news.dto.FansQueryDTO" resultMap="followMapper">
        SELECT * FROM follow as f
        inner join user as u on u.id = f.user_id
        <where>
            <choose>
                <when test="fansId != null and fansId != '0'">
                    f.user_id = #{fansId}
                </when>
                <otherwise>
                    <if test="nickname != null and nickname != ''">
                        AND u.nickname LIKE CONCAT('%', #{nickname}, '%')
                    </if>
                </otherwise>
            </choose>
            AND u.delete_flag = false AND f.follow_user_id = #{userId}
        </where>
    </select>

</mapper>
